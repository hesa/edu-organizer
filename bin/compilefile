#!/bin/bash

SRC_FILE=$1

DIR_NAME=$(dirname $0)

if [ ! -f $SRC_FILE ]
then
    echo File not found
    exit 1 
fi


LC_FILE=$(echo $SRC_FILE | tr '[:upper:]' '[:lower:]')
SUFFIX="${LC_FILE##*.}"

case $SUFFIX in
    "java")
	$DIR_NAME/compilefile-java $SRC_FILE
	RET=$?
#	echo "Java comp: $RET"
	exit $RET
	;;
    
    "c")
	$DIR_NAME/compilefile-c $SRC_FILE
	RET=$?
#	echo "C comp: $RET"
	exit $RET
	;;

    "txt" | "html" | "pdf" | "odt" |  "doc" | "docx"  )
	RET=0
	exit $RET
	;;

    *)
	echo "No support for extension: $SUFFIX"
	exit 1
	;;
esac

    
